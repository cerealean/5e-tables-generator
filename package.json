{
  "name": "5e-tables-generator",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "pkgroll",
    "buildWatch": "pkgroll --watch",
    "prestart": "npm run build",
    "start": "node ./dist/index.js"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "dependencies": {
    "core-js": "^3.33.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "pkgroll": "^2.0.1",
    "tsx": "^4.6.1"
  }
}